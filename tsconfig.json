{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "esModuleInterop": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
